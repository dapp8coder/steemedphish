{
    "manifest_version": 2,
    "name": "Steemed Phish",
    "description": "A Chrome extension that will warn you if you are being lured into a fake Steemit website.",
    "version": "0.0.15",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "tabs",
        "http://*/*",
        "idle",
        "contextMenus"
    ],
    "browser_action": {
        "default_icon": "images/icon2-48-grey.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "images/icon2-128-grey.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "*://steemit.com/*",
                "*://busy.org/*",
                "*://beta.chainbb.com/*",
                "*://steemitstage.com/*",
                "*://mspsteem.com/*",
                "*://utopian.io/*",
                "*://d.tube/*",
                "*://dsound.audio/*",
                "*://steemtools.com/*",
                "*://steemkr.com/*",
                "*://yehey.org/*",
                "*://steemitstage.com/*"
            ],
            "css": [
                "css/overrideSteemit.css"
            ],
            "js": [
                "js/content.js"
            ]
        },

        {
            "run_at": "document_end",
            "matches": [
                "*://steemil.com/*",
                "*://steewit.com/*",
                "*://sleemit.com/*"
            ],
            "js": [
                "js/content-blacklist.js"
            ]
        }
    ]
}